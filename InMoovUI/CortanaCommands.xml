<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="de-de" Name="CortanaCommandSet_de-de">
    <AppName>Roboter </AppName>
    <Example>Roboter hebe den rechten Arm</Example>

    <Command Name="arms">
      <Example>Hebe den rechten Arm</Example>
      <ListenFor RequireAppName="BeforePhrase">Hebe den {direction} Arm</ListenFor>
      <Feedback>Bist du dir sicher das ich den {direction} Arm heben soll?</Feedback>
      <VoiceCommandService Target="FHEMAppVoiceCommandService"/>
    </Command>

    <Command Name="arms_without_specification">
      <Example>Hebe den Arm</Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">Hebe den {bodypart}</ListenFor>
      <Feedback>BliBlaBlub {bodypart}</Feedback>
      <VoiceCommandService Target="FHEMAppVoiceCommandService"/>
    </Command>    

    <PhraseList Label="direction">
      <Item> linken </Item>
      <Item> rechten </Item>
    </PhraseList>
    
    <PhraseList Label="bodypart">
      <Item> Arm </Item>
      <Item> Finger </Item>
    </PhraseList>
  </CommandSet>

  <!-- Other CommandSets for other languages -->

</VoiceCommands>
